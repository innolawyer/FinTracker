<Window x:Class="FinTracker.AddCategories"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinTracker"
        mc:Ignorable="d"
        Title="Добавить категорию" Height="190" Width="186">
    <Grid Background="AntiqueWhite">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="37*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="TextBoxNewCategory" Background="White" HorizontalAlignment="Left" Margin="35,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <Button x:Name="ButtonSaveCategory" Content="Сохранить" Background="#60D6A9" BorderBrush="#35D699" FontWeight="Bold" FontSize="10" HorizontalAlignment="Left" Margin="53,101,0,0" VerticalAlignment="Top" Click="ButtonSaveCategory_Click" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
