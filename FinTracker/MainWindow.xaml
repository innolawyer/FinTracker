<Window x:Class="FinTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinTracker"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Домашняя бухгалтерия QQQ" Height="450" Width="855">
    <Grid Background="#e6ccb5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="146*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="662*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="184*"/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <TabControl Margin="0,10,0,-34" Grid.RowSpan="3" Grid.ColumnSpan="3" >
            <TabItem Background="#fcc875" Foreground="#800000" FontWeight="SemiBold" x:Name="TabItemUser"  Width="auto" Header="Пользователь">
                <!--<TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#FFBB73"/>
                    </LinearGradientBrush>
                </TabItem.Background>-->
                <Grid Background="AntiqueWhite">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="107*"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="60*"/>
                        <ColumnDefinition Width="36*"/>
                        <ColumnDefinition Width="36*"/>
                        <ColumnDefinition Width="46*"/>
                        <ColumnDefinition Width="544*"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="ComboBoxChangeUser" Background="White" BorderBrush="#e38b75" HorizontalAlignment="Left" Margin="17,27,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBoxChangeUser_SelectionChanged" SelectedIndex="0" Grid.ColumnSpan="3"/>
                    <TextBox x:Name="TextBoxUserName" Background="White" BorderBrush="#e38b75" HorizontalAlignment="Left" Margin="17,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="3"/>
                    <Button Background="#60D6A9" x:Name="ButtonCreateNewUser" Content="Создать" FontWeight="Bold" Foreground="GhostWhite" BorderBrush="#35D699" HorizontalAlignment="Left" Margin="17,102,0,0" VerticalAlignment="Top" Width="120" Click="ButtonCreateNewUser_Click" Grid.ColumnSpan="3">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Background="#e38b75" x:Name="ButtonDeleteUser_Copy" Content="Удалить" FontWeight="Bold" Foreground="GhostWhite" BorderBrush="#FF6140" HorizontalAlignment="Left" Margin="17,139,0,0" VerticalAlignment="Top" Width="120" Click="ButtonDeleteUser_Copy_Click" Grid.ColumnSpan="3">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </TabItem>
            <TabItem Background="#fcc875" Foreground="#800000" FontWeight="SemiBold" x:Name="TabItemAssets" Header="Счета" Width="auto" VerticalAlignment="Bottom" Margin="2,0,1,0" Height="22">
                <Grid Background="AntiqueWhite" Margin="0,0,-2,0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="27"/>
                        <ColumnDefinition Width="248"/>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Button Background="#60D6A9" x:Name="ButtonAddAsset" Content="Создать" FontSize="13" FontWeight="Bold" BorderBrush="#35D699" HorizontalAlignment="Left" Margin="8,14,0,0" VerticalAlignment="Top" Width="87" Foreground="GhostWhite" Click="ButtonAddAsset_Click" Grid.ColumnSpan="3" Height="31">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Label Grid.Column="4" x:Name="LabelCurrentAmount" Content="Баланс текущего &#xD;&#xA;счета" FontWeight="Bold" HorizontalAlignment="Left" Height="40" Margin="6,5,0,0" VerticalAlignment="Top" Width="150"/>
                    <Label x:Name="LabelTotalAmount" Content="Общий баланс" FontWeight="Bold" HorizontalAlignment="Left" Height="25" Margin="143,12,0,0" VerticalAlignment="Top" Width="105" Grid.Column="2"/>

                    <DatePicker x:Name="DatePickerTransaction" Background="White" BorderBrush="#e38b75" Grid.Column="3" HorizontalAlignment="Left" Margin="14,94,0,0" VerticalAlignment="Top" Width="140">
                        <DatePicker.CalendarStyle>
                            <Style TargetType="Calendar" BasedOn="{StaticResource MaterialDesignCalendarPortrait}">
                                <Style.Resources>
                                    <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#61B4CF" />
                                </Style.Resources>
                            </Style>
                        </DatePicker.CalendarStyle>
                    </DatePicker>

                    <TextBox x:Name="TextBoxComment" Background="White" BorderBrush="#e38b75" Grid.Column="3" HorizontalAlignment="Left" Margin="14,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Height="26" TextChanged="TextBoxComment_TextChanged"/>
                    <TextBox x:Name="TextBoxAmount" Background="White" BorderBrush="#e38b75" Grid.Column="3" HorizontalAlignment="Left" Margin="14,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Height="23" RenderTransformOrigin="0.52,0.299"/>
                    <Label Grid.Column="3" Content="Комментарий" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="10,118,0,0" VerticalAlignment="Top" Width="140"/>
                    <Label Grid.Column="3" Content="Сумма" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="140"/>
                    <ComboBox x:Name="ComboBoxCategoriesTransaction" BorderBrush="#e38b75" Background="White" Grid.Column="3" HorizontalAlignment="Left" Margin="14,250,0,0" VerticalAlignment="Top" Width="140" Height="25" SelectionChanged="ComboBoxCategoriesTransaction_SelectionChanged"/>
                    <Label Grid.Column="3" Content="Добавить транзакцию" FontWeight="Bold" HorizontalAlignment="Left" Margin="14,11,0,0" VerticalAlignment="Top"/>
                    <!--<Button x:Name="ButtonTransfer" Grid.Column="2" Content="Перевод между своими" HorizontalAlignment="Left" Margin="10,355,0,0" VerticalAlignment="Top" Width="140" Grid.ColumnSpan="2" Click="ButtonTransfer_Click"/>-->
                    <StackPanel x:Name="StackPanelAssetList" Margin="0,58,0,0" Grid.ColumnSpan="3"/>
                    <StackPanel x:Name="StackPanelTransactionList" Grid.Column="3" Margin="280,58,0,10" Grid.ColumnSpan="2"/>
                    <Button Background="#60D6A9" BorderBrush="#35D699" x:Name="ButtonAddCategory" Grid.Column="3" Content="+" HorizontalAlignment="Left" Margin="26,313,0,0" VerticalAlignment="Top" Width="47" Height="25" FontWeight="Bold" Click="ButtonAddCategory_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Background="#e38b75" BorderBrush="#FF5D40" x:Name="ButtonDeleteCategory" Grid.Column="3" Content="-" HorizontalAlignment="Left" Margin="95,313,0,0" VerticalAlignment="Top" Width="45" Height="25" FontWeight="Bold" RenderTransformOrigin="0.947,-0.569">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Background="#e38b75" BorderBrush="#FF6140" x:Name="ButtonDeleteAsset" Content="Удалить" FontSize="13" FontWeight="Bold" HorizontalAlignment="Left" Margin="58,14,0,0" VerticalAlignment="Top" Width="85" Foreground="GhostWhite" Grid.Column="2" Click="ButtonDeleteAsset_Click" Height="31">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <StackPanel Grid.Column="3" HorizontalAlignment="Left" Height="60" Margin="14,215,0,0" VerticalAlignment="Top" Width="140"/>
                    <!--<Button x:Name="ButtonIncome" Grid.Column="2" Content="Доход" HorizontalAlignment="Left" Margin="10,275,0,0" VerticalAlignment="Top" Width="140" Click="ButtonIncome_Click"/>-->
                    <!--<Button x:Name="ButtonSpend" Grid.Column="2" Content="Расход" HorizontalAlignment="Left" Margin="10,200,0,0" VerticalAlignment="Top" Width="140" Click="ButtonSpend_Click"/>-->
                    <Button Background="#e38b75" BorderBrush="#FF6140" x:Name="ButtonDeleteTransaction" Grid.Column="4" Content="Удалить транзакцию" FontSize="12" FontWeight="Bold" HorizontalAlignment="Left" Margin="116,11,0,0" Foreground="GhostWhite" VerticalAlignment="Top" Click="ButtonDeleteTransaction_Click" Height="26" Width="156">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Background="#61B4CF" BorderBrush="#37B6CE" x:Name="ButtonEditTransaction" Grid.Column="4" Content="Редактировать" FontSize="12" FontWeight="Bold" HorizontalAlignment="Left" Margin="140,42,0,0" Foreground="GhostWhite" VerticalAlignment="Top" Click="ButtonEditTransaction_Click" Height="24" Width="132">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <RadioButton x:Name="RadioButtonIncome" Background="#e38b75" Grid.Column="3" Content="Доход" HorizontalAlignment="Left" Margin="14,180,0,0" VerticalAlignment="Top" Click="RadioButtonIncome_Click"/>
                    <RadioButton x:Name="RadioButtonСonsumption" Background="#e38b75" Grid.Column="3" Content="Расход" HorizontalAlignment="Left" Margin="14,200,0,0" VerticalAlignment="Top" Click="RadioButtonСonsumption_Click"/>
                    <RadioButton x:Name="RadioButtonTransfer" Background="#e38b75" Grid.Column="3" Content="Перевод" HorizontalAlignment="Left" Margin="14,221,0,0" VerticalAlignment="Top" Click="RadioButtonTransfer_Click"/>
                    <Button x:Name="ButtonConfirmTransaction" Background="#60D6A9" BorderBrush="#35D699" Grid.Column="3" Content="Подтвердить" FontWeight="Bold" HorizontalAlignment="Left" Margin="14,354,0,0" Foreground="GhostWhite" VerticalAlignment="Top" Height="31" Width="140">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Label Grid.Column="3" Content="Добавить категорию" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="9,284,0,0" VerticalAlignment="Top"/>
                    <!--<Label Grid.Column="2" Content="Категории расходов" HorizontalAlignment="Left" Margin="10,148,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="ComboBoxCategoriesIncome" Grid.Column="2" HorizontalAlignment="Left" Margin="10,245,0,0" VerticalAlignment="Top" Width="100"/>
                    <Label Grid.Column="2" Content="Категории доходов" HorizontalAlignment="Left" Margin="10,220,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="ComboBoxListAsset" Grid.Column="2" HorizontalAlignment="Left" Margin="10,325,0,0" VerticalAlignment="Top" Width="140" SelectionChanged="ComboBoxListAsset_SelectionChanged"/>
                    <Label Grid.Column="2" Content="Список счетов для перевода" HorizontalAlignment="Left" Margin="10,296,0,0" VerticalAlignment="Top" FontSize="9.5" Width="140"/>
                    <Button x:Name="ButtonAddCategoryIncome" Grid.Column="2" Content="+" HorizontalAlignment="Left" Margin="111,245,0,0" VerticalAlignment="Top" Width="15" Height="22" FontWeight="Bold" Click="ButtonAddCategoryIncome_Click"/>
                        <Button x:Name="ButtonDeleteCategoryIncome" Grid.Column="2" Content="-" HorizontalAlignment="Left" Margin="128,245,0,0" VerticalAlignment="Top" Width="15" Height="22" FontWeight="Bold" Click="ButtonDeleteCategoryIncome_Click"/>-->


                </Grid>
            </TabItem>
            <TabItem Background="#fcc875" Foreground="#800000" FontWeight="SemiBold" x:Name="TabItemLoans" Width="auto" Header="Кредиты и долги">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="38*"/>
                        <ColumnDefinition Width="811*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>
                    <Button Background="#60D6A9" BorderBrush="#35D699" Grid.Row="0" x:Name="ButtoanAddLoan" Content="Добавить" Margin="29,19,632,21" Click="ButtoanAddLoan_Click" Grid.ColumnSpan="2"/>
                    <Button Background="#61B4CF" BorderBrush="#61B4CF" Grid.Row="0" x:Name="ButtoanEditLoan" Content="Изменить" Margin="200,20,425,20" Grid.Column="1"/>
                    <Button Background="#e38b75" BorderBrush="#FF6140" Grid.Row="0" x:Name="ButtoanRemoveLoan" Content="Удалить" HorizontalAlignment="Left" Margin="406,20,0,20" Width="132" Grid.Column="1" Click="ButtoanRemoveLoan_Click"/>
                    <ListView x:Name="ListViewLoans" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}" SelectedIndex="0" Grid.ColumnSpan="2">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Дата" Width="auto" DisplayMemberBinding="{Binding DateTime}"/>
                                <GridViewColumn Header="Кредитор" Width="auto" DisplayMemberBinding="{Binding CreditorsName}"/>
                                <GridViewColumn Header="%" Width="auto" DisplayMemberBinding="{Binding Percent}"/>
                                <GridViewColumn Header="Период" Width="auto" DisplayMemberBinding="{Binding Period}"/>
                                <GridViewColumn Header="Статус" Width="auto" DisplayMemberBinding="{Binding Status}"/>
                                <GridViewColumn Header="Осталось платежей" Width="auto" DisplayMemberBinding="{Binding RemainingTerm}"/>
                                <GridViewColumn Header="Сумма" DisplayMemberBinding="{Binding Amount}" Width="auto"/>
                                <GridViewColumn Header="Возвращено" Width="auto" DisplayMemberBinding="{Binding AmountOfReturned}"/>
                                <GridViewColumn Header="Остаток" Width="auto" DisplayMemberBinding="{Binding RemainingAmount}"/>
                            </GridView>
                        </ListView.View>

                    </ListView>
                    <CheckBox x:Name="CheckBoxLoanFilter" Content="Фильтр" HorizontalAlignment="Left" Margin="10,5,0,0" Grid.Row="2" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                    <DatePicker HorizontalAlignment="Left" Margin="26,30,0,0" Grid.Row="2" VerticalAlignment="Top" Width="110" Grid.ColumnSpan="2"/>
                    <DatePicker HorizontalAlignment="Left" Margin="129,30,0,0" Grid.Row="2" VerticalAlignment="Top" Width="110" Grid.Column="1"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,34,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="16" Height="16" FontWeight="Bold"><Run Language="ru-ru" Text=" "/><Run Text="c"/></TextBlock>
                    <TextBlock HorizontalAlignment="Left" Margin="108,34,0,0" Grid.Row="2" TextWrapping="Wrap" Text="по" VerticalAlignment="Top" Width="16" Height="16" FontWeight="Bold" Grid.Column="1"/>



                </Grid>

            </TabItem>
            <TabItem Background="#fcc875" Foreground="#800000" FontWeight="SemiBold" x:Name="TabItemPlanning" Width="auto" Header="Планирование">

            </TabItem>
            <TabItem Background="#fcc875" Foreground="#800000" FontWeight="SemiBold" x:Name="TabItemDeposits" Width="auto" Header="Банковские вклады">

            </TabItem>
            <TabItem Background="#fcc875" Foreground="#800000" FontWeight="SemiBold" x:Name="TabItemAnalytics" Width="auto" Header="Аналитика">

            </TabItem>
        </TabControl>

    </Grid>
</Window>