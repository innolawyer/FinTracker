<Window x:Class="FinTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinTracker"
        mc:Ignorable="d"
        Title="Домашняя бухгалтерия QQQ" Height="450" Width="800">
    <Grid>
        <TabControl Margin="0,10,0,0" >
            <TabItem x:Name="TabItemUser" Width="auto" Header="Пользователь" >
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#FFF0F0F0"/>
                    </LinearGradientBrush>
                </TabItem.Background>

                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="119*"/>
                        <ColumnDefinition Width="56*"/>
                        <ColumnDefinition Width="620*"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="ComboBoxChangeUser" HorizontalAlignment="Left" Margin="17,27,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBoxChangeUser_SelectionChanged" SelectedIndex="0" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="TextBoxUserName" HorizontalAlignment="Left" Margin="17,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
                    <Button x:Name="ButtonCreateNewUser" Content="Создать" HorizontalAlignment="Left" Margin="17,77,0,0" VerticalAlignment="Top" Width="120" Click="ButtonCreateNewUser_Click" Grid.ColumnSpan="2"/>
                    <Button x:Name="ButtonDeleteUser_Copy" Content="Удалить" HorizontalAlignment="Left" Margin="17,102,0,0" VerticalAlignment="Top" Width="120" Click="ButtonDeleteUser_Copy_Click" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="TabItemAssets" Header="Счета" Width="auto" VerticalAlignment="Top" Margin="-2,-2,2,0">
                <Grid Background="#FFE5E5E5" Margin="0,0,-2,0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="ButtonAddAsset" Content="Создать счет" HorizontalAlignment="Left" Margin="8,14,0,0" VerticalAlignment="Top" Width="80" Click="ButtonAddAsset_Click" Grid.ColumnSpan="2"/>
                    <Label Grid.Column="3" x:Name="LabelCurrentAmount" Content="Баланс текущего счета" HorizontalAlignment="Left" Height="34" Margin="30,11,0,0" VerticalAlignment="Top" Width="150"/>
                    <Label x:Name="LabelTotalAmount" Content="Общий баланс" HorizontalAlignment="Left" Height="24" Margin="182,10,0,0" VerticalAlignment="Top" Width="93" Grid.Column="1"/>
                    <DatePicker x:Name="DatePickerTransaction" Grid.Column="2" HorizontalAlignment="Left" Margin="10,180,0,0" VerticalAlignment="Top" Width="140"/>
                    <TextBox x:Name="TextBoxComment" Grid.Column="2" HorizontalAlignment="Left" Margin="10,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
                    <TextBox x:Name="TextBoxAmount" Grid.Column="2" HorizontalAlignment="Left" Margin="10,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
                    <Label Grid.Column="2" Content="Комментарий" HorizontalAlignment="Left" Margin="10,126,0,0" VerticalAlignment="Top" Width="140"/>
                    <Label Grid.Column="2" Content="Сумма" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Width="140"/>
                    <ComboBox x:Name="ComboBoxCategoriesTransaction" Grid.Column="2" HorizontalAlignment="Left" Margin="10,99,0,0" VerticalAlignment="Top" Width="100" Height="22" SelectionChanged="ComboBoxCategoriesTransaction_SelectionChanged"/>
                    <Label Grid.Column="2" Content="Добавить транзакцию" HorizontalAlignment="Left" Margin="14,11,0,0" VerticalAlignment="Top"/>
                    <Button Grid.Column="2" Content="Перевод между своими" HorizontalAlignment="Left" Margin="14,261,0,0" VerticalAlignment="Top" Width="140"/>
                    <StackPanel x:Name="StackPanelAssetList" Margin="0,58,0,0" Grid.ColumnSpan="2"/>
                    <StackPanel x:Name="StackPanelTransactionList" Grid.Column="3" Margin="0,45,0,0"/>
                    <Button x:Name="ButtonAddCategory" Grid.Column="2" Content="+" HorizontalAlignment="Center" Margin="0,99,0,0" VerticalAlignment="Top" Width="15" Height="22" FontWeight="Bold" Click="ButtonAddCategory_Click"/>
                    <Button x:Name="ButtonDeleteCategory" Grid.Column="2" Content="-" HorizontalAlignment="Left" Margin="135,99,0,0" VerticalAlignment="Top" Width="15" Height="22" FontWeight="Bold" Click="ButtonDeleteCategory_Click"/>
                    <Button x:Name="ButtonDeleteAsset" Content="Удалить счет" HorizontalAlignment="Left" Margin="78,14,0,0" VerticalAlignment="Top" Width="80" Grid.Column="1" Click="ButtonDeleteAsset_Click"/>
                    <StackPanel Grid.Column="2" HorizontalAlignment="Left" Height="60" Margin="14,221,0,0" VerticalAlignment="Top" Width="140"/>
                    <Button x:Name="ButtonIncome" Grid.Column="2" Content="Доход" HorizontalAlignment="Left" Margin="14,221,0,0" VerticalAlignment="Top" Width="140" Click="ButtonIncome_Click"/>
                    <Button x:Name="ButtonSpend" Grid.Column="2" Content="Расход" HorizontalAlignment="Left" Margin="14,241,0,0" VerticalAlignment="Top" Width="140" Click="ButtonSpend_Click"/>
                    <Button x:Name="ButtonDeleteTransaction" Grid.Column="2" Content="Удалить транзакцию" HorizontalAlignment="Left" Margin="60,306,0,0" VerticalAlignment="Top"/>
                    <Button x:Name="ButtonEditTransaction" Grid.Column="2" Content="Редактировать" HorizontalAlignment="Left" Margin="61,348,0,0" VerticalAlignment="Top"/>


                </Grid>
            </TabItem>
            <TabItem x:Name="TabItemLoans" Width="auto" Header="Кредиты и долги">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>
                    <Button Grid.Row="0" x:Name="ButtoanAddLoan" Content="Добавить" Margin="29,19,632,21"/>
                    <Button Grid.Row="0" x:Name="ButtoanEditLoan" Content="Изменить" Margin="167,19,495,21"/>
                    <Button Grid.Row="0" x:Name="ButtoanRemoveLoan" Content="Удалить" HorizontalAlignment="Left" Margin="304,19,0,21" Width="133"/>
                    <ListView x:Name="ListViewLoans" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}" SelectedIndex="0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Дата"/>
                                <GridViewColumn Header="Кредитор"/>
                                <GridViewColumn Header="%"/>
                                <GridViewColumn Header="Период"/>
                                <GridViewColumn Header="Статус"/>
                                <GridViewColumn Header="Дата закрытия"/>
                                <GridViewColumn Header="Сумма"/>
                                <GridViewColumn Header="Возвращено"/>
                                <GridViewColumn Header="Остаток"/>
                            </GridView>
                        </ListView.View>

                    </ListView>
                    <CheckBox x:Name="CheckBoxLoanFilter" Content="Фильтр" HorizontalAlignment="Left" Margin="10,5,0,0" Grid.Row="2" VerticalAlignment="Top"/>
                    <DatePicker HorizontalAlignment="Left" Margin="26,30,0,0" Grid.Row="2" VerticalAlignment="Top" Width="110"/>
                    <DatePicker HorizontalAlignment="Left" Margin="167,30,0,0" Grid.Row="2" VerticalAlignment="Top" Width="110"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,34,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="16" Height="16" FontWeight="Bold"><Run Language="ru-ru" Text=" "/><Run Text="c"/></TextBlock>
                    <TextBlock HorizontalAlignment="Left" Margin="146,34,0,0" Grid.Row="2" TextWrapping="Wrap" Text="по" VerticalAlignment="Top" Width="16" Height="16" FontWeight="Bold"/>



                </Grid>

            </TabItem>
            <TabItem x:Name="TabItemPlanning" Width="auto" Header="Планирование">

            </TabItem>
            <TabItem x:Name="TabItemDeposits" Width="auto" Header="Банковские вклады">

            </TabItem>
            <TabItem x:Name="TabItemAnalytics" Width="auto" Header="Аналитика">

            </TabItem>
        </TabControl>

    </Grid>
</Window>
