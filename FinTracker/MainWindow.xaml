<Window x:Class="FinTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinTracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl HorizontalAlignment="Center" Height="424" Margin="0,10,0,0" VerticalAlignment="Top" Width="800" >
            <TabItem Header="Пользователь" >
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#FFF0F0F0"/>
                        <GradientStop Color="#FFBB2323" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>

                <Grid Background="#FFE5E5E5">
                    <ComboBox x:Name="ComboBoxChangeUser" HorizontalAlignment="Left" Margin="17,27,0,0" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="TextBoxUserName" HorizontalAlignment="Left" Margin="192,29,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                    <Button x:Name="ButtonCreateNewUser" Content="Button" HorizontalAlignment="Left" Margin="192,64,0,0" VerticalAlignment="Top" Width="120"/>
                </Grid>
            </TabItem>
            <TabItem Header="Счета">
                <Grid Background="#FFE5E5E5" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel x:Name="StackPanelTransactions" Grid.Column="1" Height="347" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="397"/>
                    <Button Grid.Column="0" Content="Создать счет" HorizontalAlignment="Left" Margin="150,14,0,0" VerticalAlignment="Top" Width="140"/>
                    <Button Content="Расход" HorizontalAlignment="Left" Margin="10,0,0,168" VerticalAlignment="Bottom" RenderTransformOrigin="0.505,0.455" Width="140" Click="Button_Click"/>
                    <Label x:Name="LabelCurrentAmount" Grid.Column="1" Content="Label" HorizontalAlignment="Left" Height="34" Margin="97,7,0,0" VerticalAlignment="Top" Width="150"/>
                    <Label x:Name="LabelTotalAmount" Content="Label" HorizontalAlignment="Left" Height="24" Margin="150,39,0,0" VerticalAlignment="Top" Width="140"/>
                    <Button Content="Доход" HorizontalAlignment="Left" Margin="10,0,0,143" VerticalAlignment="Bottom" RenderTransformOrigin="0.505,0.455" Width="140"/>
                    <DatePicker HorizontalAlignment="Left" Margin="10,180,0,0" VerticalAlignment="Top" Width="140"/>
                    <TextBox HorizontalAlignment="Left" Margin="10,157,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="140"/>
                    <TextBox HorizontalAlignment="Left" Margin="10,76,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="140"/>
                    <Label Content="Комментарий" HorizontalAlignment="Left" Margin="10,126,0,0" VerticalAlignment="Top" Width="140"/>
                    <Label Content="Сумма" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Width="140"/>
                    <ComboBox HorizontalAlignment="Left" Margin="10,99,0,0" VerticalAlignment="Top" Width="140"/>
                    <Label Content="Label" HorizontalAlignment="Left" Margin="10,14,0,0" VerticalAlignment="Top"/>
                    <Button Content="Перевод между своими" HorizontalAlignment="Left" Margin="10,258,0,0" VerticalAlignment="Top" Width="140"/>


                </Grid>
            </TabItem>
            <TabItem Header="Регулярные платежи">

            </TabItem>
            <TabItem Header="Аналитика">

            </TabItem>
        </TabControl>

    </Grid>
</Window>
