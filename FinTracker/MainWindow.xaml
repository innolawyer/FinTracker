<Window x:Class="FinTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinTracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl HorizontalAlignment="Center" Height="424" Margin="0,10,0,0" VerticalAlignment="Top" Width="800" >
            <TabItem Header="Пользователь" >
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#FFF0F0F0"/>
                        <GradientStop Color="#FFBB2323" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>

                <Grid Background="#FFE5E5E5">
                    <ComboBox x:Name="ComboBoxChangeUser" HorizontalAlignment="Left" Margin="17,27,0,0" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="TextBoxUserName" HorizontalAlignment="Left" Margin="192,29,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                    <Button x:Name="ButtonCreateNewUser" Content="Button" HorizontalAlignment="Left" Margin="192,64,0,0" VerticalAlignment="Top" Width="120" Click="ButtonCreateNewUser_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Счета">
                <Grid Background="#FFE5E5E5" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    
                    <Button x:Name="ButtonAddAsset" Grid.Column="0" Content="Создать счет" HorizontalAlignment="Left" Margin="27,14,0,0" VerticalAlignment="Top" Width="140" Click="ButtonAddAsset_Click"/>
                    <Button x:Name="ButtonSpend" Grid.Column="1" Content="Расход" HorizontalAlignment="Left" Margin="10,0,0,168" VerticalAlignment="Bottom" RenderTransformOrigin="0.505,0.455" Width="140" Click="ButtonSpend_Click"/>
                    <Label Grid.Column="2" x:Name="LabelCurrentAmount" Content="Label" HorizontalAlignment="Left" Height="34" Margin="30,11,0,0" VerticalAlignment="Top" Width="150"/>
                    <Label x:Name="LabelTotalAmount" Content="Общий баланс" HorizontalAlignment="Left" Height="24" Margin="197,10,0,0" VerticalAlignment="Top" Width="93"/>
                    <Button x:Name="ButtonIncome" Grid.Column="1" Content="Доход" HorizontalAlignment="Left" Margin="10,0,0,143" VerticalAlignment="Bottom" RenderTransformOrigin="0.505,0.455" Width="140" Click="ButtonIncome_Click"/>
                    <DatePicker x:Name="DatePickerTransaction" Grid.Column="1" HorizontalAlignment="Left" Margin="10,180,0,0" VerticalAlignment="Top" Width="140"/>
                    <TextBox x:Name="TextBoxComment" Grid.Column="1" HorizontalAlignment="Left" Margin="10,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
                    <TextBox x:Name="TextBoxAmount" Grid.Column="1" HorizontalAlignment="Left" Margin="10,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
                    <Label Grid.Column="1" Content="Комментарий" HorizontalAlignment="Left" Margin="10,126,0,0" VerticalAlignment="Top" Width="140"/>
                    <Label Grid.Column="1" Content="Сумма" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Width="140"/>
                    <ComboBox x:Name="ComboBoxCategoriesTransaction" Grid.Column="1" HorizontalAlignment="Left" Margin="10,99,0,0" VerticalAlignment="Top" Width="140"/>
                    <Label Grid.Column="1" Content="Добавить транзакцию" HorizontalAlignment="Left" Margin="14,11,0,0" VerticalAlignment="Top"/>
                    <Button Grid.Column="1" Content="Перевод между своими" HorizontalAlignment="Left" Margin="10,258,0,0" VerticalAlignment="Top" Width="140"/>
                    <StackPanel x:Name="StackPanelAssetList" Margin="0,58,0,0"/>
                    <StackPanel x:Name="StackPanelTransactionList" Grid.Column="2" Margin="0,45,0,0"/>


                </Grid>
            </TabItem>
            <TabItem Header="Регулярные платежи">

            </TabItem>
            <TabItem Header="Аналитика">

            </TabItem>
        </TabControl>

    </Grid>
</Window>
