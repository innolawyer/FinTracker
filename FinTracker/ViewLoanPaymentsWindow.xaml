<Window x:Class="FinTracker.ViewLoanPaymentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinTracker"
        mc:Ignorable="d"
        Title="ViewLoanPaymentsWindow" Height="369" Width="404">
    <Grid>
        <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,64,10,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Дата" Width="100"/>
                    <GridViewColumn Header="Сумма" Width="120"/>
                    <GridViewColumn Header="Цель" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="ButtonAddExtraPayment" Content="Добавить" HorizontalAlignment="Left" Margin="20,29,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="ButtonEditExtraPayment" Content="Редактировать" HorizontalAlignment="Left" Margin="125,29,0,0" VerticalAlignment="Top" Width="144"/>
        <Button x:Name="ButtonRemoveExtraPayment" Content="Удалить" HorizontalAlignment="Left" Margin="274,29,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
