<Window x:Class="FinTracker.AddLoanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinTracker"
        mc:Ignorable="d"
        Title="AddLoanWindow" Height="274" Width="249">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <DatePicker x:Name="DatePickerLoanStart" Margin="75,10,74,6" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TextBoxLoanCreditorName" Grid.Column="1" Margin="10,0,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Left" Width="120"/>
        <TextBox x:Name="TextBoxLoanPercent" Grid.Column="1" Margin="10,0,0,0" Grid.Row="2" TextWrapping="Wrap" Height="17" VerticalAlignment="Center" HorizontalAlignment="Left" Width="120"/>
        <TextBox x:Name="TextBoxLoanPeriod" Grid.Column="1" Margin="10,0,19,0" Grid.Row="3" TextWrapping="Wrap" Height="17" VerticalAlignment="Center" Width="120"/>
        <TextBlock Margin="10,0,10,0" Grid.Row="1" TextWrapping="Wrap" Height="16" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Language="ru-ru" Text="Кредитор"/></TextBlock>
        <TextBlock Margin="10,0,10,0" Grid.Row="2" TextWrapping="Wrap" FlowDirection="LeftToRight" Height="16" VerticalAlignment="Center" HorizontalAlignment="Center" Text=" %"/>
        <TextBlock Height="18" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" Width="80"><Run Text="  "/><Run Text="Период(мес)"/></TextBlock>
        <Button x:Name="ButtonCreateLoan" Content="Создать" Margin="68,0,89,0" Grid.Row="7" VerticalAlignment="Center" Grid.ColumnSpan="2" Click="ButtonCreateLoan_Click"/>
        <TextBlock Height="16" Grid.Row="4" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" Width="74"><Run Language="ru-ru" Text="      "/><Run Text="Статус"/></TextBlock>
        <ComboBox x:Name="ComboBoxLoanStatus" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="4" VerticalAlignment="Center" Width="120"/>
        <TextBox x:Name="TextBoxLoanPeriod_Copy" Grid.Column="1" Grid.Row="6" TextWrapping="Wrap" Height="17" VerticalAlignment="Center" HorizontalAlignment="Left" Width="120" Margin="10,0,10,0"/>
        <TextBlock Height="16" Grid.Row="6" TextWrapping="Wrap" VerticalAlignment="Center" Margin="10,0,10,0" HorizontalAlignment="Center"><Run Language="ru-ru" Text="  "/><Run Text="Сумма"/></TextBlock>
        <TextBox x:Name="TextBoxLoanAmountOfReturned" Grid.Column="1" Margin="10,0,19,0" Grid.Row="5" TextWrapping="Wrap" Height="17" VerticalAlignment="Center" Width="120"/>
        <TextBlock Height="18" Grid.Row="5" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Left" Width="74" Margin="16,0,0,0"><Run Language="ru-ru" Text="Выплачено"/></TextBlock>
    </Grid>
</Window>
