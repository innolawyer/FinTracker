<Window x:Class="FinTracker.ViewLoanPaymentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinTracker"
        mc:Ignorable="d"
        Title="Платежи по кредиту" Height="284" Width="354">
    <Grid>
        <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Дата" Width="100"/>
                    <GridViewColumn Header="Сумма" Width="120"/>
                    <GridViewColumn Header="Цель" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
