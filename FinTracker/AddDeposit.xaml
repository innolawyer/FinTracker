<Window x:Class="FinTracker.AddDeposit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinTracker"
        mc:Ignorable="d"
        Title="AddDeposit" Height="519" Width="457">
    <Grid>
        <Label Content="Добавить вклад" FontSize="13" FontWeight="Bold" HorizontalAlignment="Left" Margin="13,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.422,-0.928"/>
        <Label Content="Сумма" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="300,50,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.299,0.937"/>
        <TextBox x:Name="TextBoxDepositAmount" Background="White" BorderBrush="#e38b75" HorizontalAlignment="Left" Margin="300,74,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
        <DatePicker x:Name="DatePickerDepositStart" Background="White" BorderBrush="#e38b75" HorizontalAlignment="Left" Margin="158,107,0,0" VerticalAlignment="Top" Width="120" Height="32">
            <DatePicker.CalendarStyle>
                <Style TargetType="{x:Type Calendar}">
                    <Style.Resources>
                        <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#61B4CF" />
                    </Style.Resources>
                    <Style.BasedOn>
                        <StaticResource ResourceKey="MaterialDesignCalendarPortrait"/>
                    </Style.BasedOn>
                </Style>
            </DatePicker.CalendarStyle>
        </DatePicker>
        <CheckBox x:Name="CheckBoxWithdrawable" Background="#e38b75" Content="С возможностью снятия" HorizontalAlignment="Left" Margin="222,192,0,0" VerticalAlignment="Top" Width="166"/>
        <CheckBox x:Name="CheckBoxСapitalization" Background="#e38b75" Content="Сложный %" HorizontalAlignment="Left" Margin="222,238,0,0" VerticalAlignment="Top" Width="196"/>
        <CheckBox x:Name="CheckBoxPutable" Background="#e38b75" Content="С возможностью пополнения" HorizontalAlignment="Left" Margin="222,215,0,0" VerticalAlignment="Top" Width="196"/>
        <Label Content="Дата открытия" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="13,115,0,0" VerticalAlignment="Top"/>
        <Label Content="Срок вклада" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="13,151,0,0" VerticalAlignment="Top"/>
        <Label Content="Комментарий" FontWeight="Bold" HorizontalAlignment="Left" Margin="13,265,0,0" VerticalAlignment="Top"/>
        <TextBox Background="White" BorderBrush="#e38b75" HorizontalAlignment="Left" Margin="13,294,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="165" Height="24"/>
        <Button x:Name="ButtonSaveNewDeposit" Content="Сохранить" Background ="#60D6A9" BorderBrush="#60D6A9" HorizontalAlignment="Center" Margin="0,445,0,0" VerticalAlignment="Top" Width="424" Click="ButtonSaveNewDeposit_Click"/>
        <ComboBox x:Name="ComboBoxDepositSpendAsset" HorizontalAlignment="Left" Margin="222,293,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TextBoxNameAsset" HorizontalAlignment="Left" Margin="13,74,0,0" TextWrapping="Wrap" Text="Вклад" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TextBoxPercent" HorizontalAlignment="Left" Margin="159,205,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="37"/>
        <ComboBox x:Name="ComboBoxPeriod" HorizontalAlignment="Left" Margin="300,150,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Название вклада" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="13,50,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.299,0.937"/>
        <Label Content="Годовой % по вкладу" FontWeight="Bold" HorizontalAlignment="Left" Margin="13,206,0,0" VerticalAlignment="Top"/>
        <Label Content="Банк" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="158,50,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxBankName" HorizontalAlignment="Left" Margin="158,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Период начисления" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="300,115,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.299,0.937"/>
        <Label Content="Выберите счет для начисления %" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="222,264,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxTermDeposit" HorizontalAlignment="Left" Margin="158,151,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="LabelIncomeSumSpend" Content="" HorizontalAlignment="Left" Margin="17,381,0,0" VerticalAlignment="Top" Width="420" Height="59"/>
        <Button Content="Рассчитатть доход по вкладу" HorizontalAlignment="Left" Margin="17,334,0,0" VerticalAlignment="Top" Width="420" BorderBrush="#FF673AB7"/>

    </Grid>
</Window>
