<Window x:Class="FinTracker.AddAssetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinTracker"
        mc:Ignorable="d"
        Title="Создать новый счет" Height="359" Width="289">
    <Grid>
        <TextBox x:Name="TextBoxAssetName" HorizontalAlignment="Center" Margin="0,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="236" Text="Счет"/>
        <TextBox x:Name="TextBoxAmount" HorizontalAlignment="Center" Margin="0,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="236" Text="0" GotFocus="TextBoxAmount_GotFocus"/>
        <Button x:Name="ButtonCreateAsset" Content="Создать" HorizontalAlignment="Center" Margin="0,286,0,0" VerticalAlignment="Top" Width="236" Click="ButtonCreateAsset_Click"/>
        <TextBox x:Name="TextBoxYearInterest" HorizontalAlignment="Center" Margin="0,131,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="236" Text="0"/>
        <TextBox x:Name="TextBoxMonthFee" HorizontalAlignment="Center" Margin="0,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="236" RenderTransformOrigin="0.528,-0.254" Text="0"/>
        <TextBox x:Name="TextBoxFixCashback" HorizontalAlignment="Center" Margin="0,219,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="236" Text="0"/>
        <Label Content="Текущее состояние" HorizontalAlignment="Left" Margin="26,60,0,0" VerticalAlignment="Top"/>
        <Label Content="Процент на остаток" HorizontalAlignment="Left" Margin="26,104,0,0" VerticalAlignment="Top"/>
        <Label Content="Обслуживание" HorizontalAlignment="Left" Margin="26,149,0,0" VerticalAlignment="Top"/>
        <Label Content="Кэшбек на все покупки" HorizontalAlignment="Left" Margin="26,193,0,0" VerticalAlignment="Top"/>
        <Label Content="Название счета" HorizontalAlignment="Center" Margin="0,17,0,0" VerticalAlignment="Top" Width="236"/>

    </Grid>
</Window>
