<Window x:Class="FinTracker.AddAssetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinTracker"
        mc:Ignorable="d"
        Title="Создать новый счет" Height="370" Width="289" Closed="Window_Closed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="81*"/>
            <ColumnDefinition Width="208*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="TextBoxAssetName" HorizontalAlignment="Left" Margin="26,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="236" Text="Счет" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TextBoxAmount" HorizontalAlignment="Left" Margin="26,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="236" Text="0" GotFocus="TextBoxAmount_GotFocus" Grid.ColumnSpan="2"/>
        <Button x:Name="ButtonCreateAsset" Content="Создать" Background="#00BB3F" BorderBrush="#00BB3F" FontWeight="Bold" FontSize="15" HorizontalAlignment="Left" Margin="26,286,0,0" VerticalAlignment="Top" Width="236" Click="ButtonCreateAsset_Click" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TextBoxYearInterest" HorizontalAlignment="Left" Margin="26,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="236" Text="0" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TextBoxMonthFee" HorizontalAlignment="Left" Margin="26,191,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="236" RenderTransformOrigin="0.528,-0.254" Text="0" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TextBoxFixCashback" HorizontalAlignment="Left" Margin="26,240,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="236" Text="0" Grid.ColumnSpan="2"/>
        <Label Content="Текущее состояние" FontWeight="Bold" HorizontalAlignment="Left" Margin="26,68,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label Content="Процент на остаток" FontWeight="Bold" HorizontalAlignment="Left" Margin="26,118,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label Content="Обслуживание" FontWeight="Bold" HorizontalAlignment="Left" Margin="26,167,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label Content="Кэшбек на все покупки" FontWeight="Bold" HorizontalAlignment="Left" Margin="26,216,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label Content="Название счета" FontWeight="Bold" HorizontalAlignment="Left" Margin="26,17,0,0" VerticalAlignment="Top" Width="236" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
